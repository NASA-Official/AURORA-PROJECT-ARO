<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_pager_background_color"
    tools:context=".ui.view.main.MainFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:importantForAccessibility="no"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="4dp"
        android:background="@color/view_pager_background_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabIconTint="@drawable/tab_selected"
        app:tabTextColor="@drawable/tab_selected"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorColor="@color/main_app_color"
        app:tabIndicatorHeight="4dp"
        app:tabTextAppearance="@style/TabTextStyle"
        app:tabBackground="@color/view_pager_background_color" />

</androidx.constraintlayout.widget.ConstraintLayout>